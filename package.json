{
  "name": "bpm-calculator-root",
  "private": true,
  "scripts": {
    "contrib:gen": "all-contributors generate",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "yarn lint:lib && yarn lint:react",
    "lint:lib": "eslint --color --ext=ts lib",
    "lint:react": "eslint --color --ext=ts,tsx react-app"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "all-contributors-cli": "^6.14.2",
    "eslint": "^7.9.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.2",
    "release-it": "^14.0.3",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,html,json,yaml,yml}": "prettier --print-width=80 --write",
    "*.md": "prettier --prose-wrap=always --print-width=80 --write",
    "*.ts,tsx": [
      "eslint --color",
      "prettier --print-width=80 --write"
    ]
  }
}
